{
  "name": "cyndaron/view",
  "description": "View and template components Cyndaron",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Cyndaron\\View\\": "src/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^8.1",
    "thecodingmachine/safe": "^2.1",
    "cyndaron/dbal": "^2.0",
    "cyndaron/util": "^3.0",
    "illuminate/view": "^10.0",
    "conedevelopment/blade-filters": "*",
    "cyndaron/module": "^1.1"
  },
  "require-dev": {
    "roave/security-advisories": "dev-master",
    "phpstan/phpstan": "*",
    "friendsofphp/php-cs-fixer": "*"
  },
  "scripts": {
    "phpstan": [
      "vendor/bin/phpstan analyse src --level 8"
    ],
    "cs-check": [
      "vendor/bin/php-cs-fixer fix src/ --allow-risky=yes --dry-run --diff"
    ],
    "cs-fix": [
      "vendor/bin/php-cs-fixer fix src/ --allow-risky=yes"
    ]
  }
}
